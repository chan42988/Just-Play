<div class="container">

	<div id="lcenter">
		<br><h1>Login</h1><br>

		<%= form_tag '/login' do %>

		  Email:<br> <%= text_field_tag :email %><br><br>
		  Password:<br> <%= password_field_tag :password
		   %>
		  <%= hidden_field :ip, :value => request.remote_ip %><br><br><br>
		  <button type="button3" class="btn btn-default btn-lg">
		  <%= submit_tag "Submit" %>
		  </button>
		<% end %>
	</div>

</div>