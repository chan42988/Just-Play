<div id="PUG">

	<div id="mike">
	<%= image_tag("intense1.jpg") %>
	</div><br><br>

		<div id="words1">
			<%= form_for :location, url: '/locations' do |location| %>
				<div id="ss">
			  <%=location.select :sport, options_for_select([["Select sport", ""], "Tennis", "Basketball", "Sumo Wrestling", "Running"]) %><br><br>
			  </div>
			  <div id="sp">
				<%=location.select :position, options_for_select([["Select position", ""], "PG", "SG", "SF", "PF", "C"]) %>
				</div>
				<div id="spn">
				<%=location.select :position2, options_for_select([["Select position", ""], "PG", "SG", "SF", "PF", "C"]) %>
				</div>
				<%= location.hidden_field :user_id, value:current_user.id%>
				<%= location.hidden_field :username, value:current_user.username%><br><br>
							
			  Zip code/IP Address:<br><br><%= location.text_field :address %><br><br><br>
			  <div id="nbutton">
			  <%=location.submit "Game On", class: "Game-on" %>
			  </div>
			<% end %>
		</div>

</div>